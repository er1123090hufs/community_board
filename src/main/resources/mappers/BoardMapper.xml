<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.sp1.mapper.BoardMapper">

    <sql id="search">
        <where>
            <if test="keyword != null">
                <foreach item ='item' collection="types" separator="or"  open="(" close=")">
                    <if test='item == "t"'>
                        title like concat('%', #{keyword}, '%')
                    </if>
                    <if test='item == "c"'>
                        contents like concat('%', #{keyword}, '%')
                    </if>
                    <if test='item == "w"'>
                        writer like concat('%', #{keyword}, '%')
                    </if>
                </foreach>
            </if>
        </where>
    </sql>

    <insert id="insert">
        <selectKey resultType="int" keyProperty="bno" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into tbl_board(title, contents, writer)
        values (#{title}, #{contents}, #{writer});
    </insert>

    <select id="selectList" resultType="org.zerock.sp1.domain.Board">
        select bno, title, contents, writer, regDate, updateDate
        from tbl_board
        <include refid="search"></include>
        order by bno desc
        limit #{skip}, #{size}
    </select>

    <select id="getTotal" resultType="int">
        select count(bno) from tbl_board
        <include refid="search"></include>
    </select>

    <delete id="delete">
        delete from tbl_board where bno = #{bno}
    </delete>

    <select id="selectOne" resultType="org.zerock.sp1.domain.Board">
        select * from tbl_board where bno =#{bno}
    </select>

    <update id="update">
        update tbl_board set title =#{title}, contents =#{contents}, updateDate = now() where bno = #{bno}
    </update>



</mapper>